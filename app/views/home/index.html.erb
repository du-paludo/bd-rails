<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">

<body>
    <main>
        <% if user_signed_in? %> 
        <p>Bem-vindo <%= current_user.email %>!</p> 
        <p><%= link_to "Ver clientes", clientes_path %></p>
        <p><%= link_to "Ver pedidos", pedidos_path %></p>
        <p><%= link_to "Ver produtos", produtos_path %></p>
        <br>
        <p><%= button_to "Sign out", destroy_user_session_path, method: :delete, form_class: "button" %></p>
        <% else %>
        <p><%= button_to "Sign in", new_user_session_path, form_class: "button" %>
        <%= button_to "Sign up", new_user_registration_path, form_class: "button" %></p>
        <% end %>
    </main>
</body>