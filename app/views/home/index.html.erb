<body>
    <main>
        <% if user_signed_in? %> 
        <p>Bem-vindo <%= current_user.email %>!</p> 
        <p><%= link_to "Ver clientes", clientes_path %></p>
        <p><%= link_to "Ver pedidos", pedidos_path %></p>
        <p><%= link_to "Ver produtos", produtos_path %></p>
        <br>
        <p><%= button_to "Sign out", destroy_user_session_path, method: :delete, form_class: "button" %></p>
        <% else %>
        <!-- redirects to log in page -->
        <% controller.redirect_to new_user_session_path %>
        <% end %>
    </main>
</body>